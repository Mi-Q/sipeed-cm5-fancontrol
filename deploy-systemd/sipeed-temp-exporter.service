[Unit]
Description=Sipeed CM5 Temperature Exporter
After=network.target

[Service]
Type=simple
User=root
ExecStart=/usr/bin/python3 /home/pi/cm5fancontrol/temp_exporter.py --bind 0.0.0.0 --port 8080
Restart=on-failure

[Install]
WantedBy=multi-user.target

# Adjust ExecStart path to where you place this repository on your Pi.
